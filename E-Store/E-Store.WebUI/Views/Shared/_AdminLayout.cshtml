@{ 
    var currentAction = ViewContext.RouteData.Values["action"].ToString();
   
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("E-Shop-Admin", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-right">
                <a class="btn btn-warning navbar-btn" href="@Url.Action("List", "Product")">Выход</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(currentAction=="Index"?"active":"")"><a href="@Url.Action("Index", "Admin")">Товары </a></li>
                    <li class="@(currentAction=="ViewCustomers"?"active":"")"><a href="@Url.Action("ViewCustomers", "Admin")">Пользователи</a></li>
                    <li class="@(currentAction=="ViewOrders"?"active":"")"><a href="@Url.Action("ViewOrders", "Admin")">Заказы</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
    </div>

    <div class="container body-content">
        <div class="row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

   
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
