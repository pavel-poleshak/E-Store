@{
    var currentAction = ViewContext.RouteData.Values["action"].ToString();

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")  
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("E-Shop-Admin", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-right">
                <a class="btn btn-warning navbar-btn" href="@Url.Action("List", "Product")">Выход</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(currentAction=="Index"?"active":"")"><a href="@Url.Action("Index", "Admin")">Товары </a></li>
                    <li class="@(currentAction=="ViewCategories"?"active":"")"><a href="@Url.Action("ViewCategories", "Admin")">Категории товара </a></li>
                    <li class="@(currentAction=="ViewCustomers"?"active":"")"><a href="@Url.Action("ViewCustomers", "Admin")">Пользователи</a></li>
                    <li class="@(currentAction=="ViewOrders"?"active":"")"><a href="@Url.Action("ViewOrders", "Admin")">Заказы</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-info">@TempData["message"]</div>
        }
    </div>

    <div class="container body-content">
        <div class="row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <!-- Modal window-->
    <div class="modal" id="extendedInfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" id="modal-content">
            </div>
        </div>
    </div>
    <!--End Modal-->
    <!--Loader-->
    <div class="modal" id="loader" tabindex="-1">
        <div class="loading" id="loaderIcon" style="display:block">Loading&#8230;</div>
    </div>
    <!--End Loader-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ajax")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-select")
    @Scripts.Render("~/bundles/custom-scripts")
    @RenderSection("scripts", required: false)  

</body>
</html>
