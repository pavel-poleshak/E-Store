<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")  


</head>
<body>
    <div class="navbar navbar-inverse">
        <span class="pull-right"><a class="btn btn-warning navbar-btn" href="@Url.Action("Index", "Admin")">Войти</a></span>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("E-Shop", "List", "Product", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            @Html.Action("CartSummary", "Cart")
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    @if (TempData["message"]!=null)
    {
        <div class="alert alert-info">@TempData["message"]</div>
    }
    

    <div class="container body-content">
        <div class="row">
            <div class="col-lg-4" id="categories">
                @Html.Action("Menu", "Nav")
                <!--custom Menu-->      

               
                <!---->
            </div>
            <div class="col-lg-8">
                @RenderBody()
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pavel Poleshak ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ajax")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")    
    @RenderSection("scripts", required: false)

</body>
</html>