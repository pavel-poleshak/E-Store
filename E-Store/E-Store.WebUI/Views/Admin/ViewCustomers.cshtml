@model IEnumerable<E_Store.Domain.Entities.Customer>

@{
    ViewBag.Title = "ViewCustomers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список заказчиков</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th>Имя</th>
                <th>E-Mail</th>
                <th class="text-right">Дата регистрации</th>
                <th class="text-center">Операции</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.CustomerId</td>
                    <td>@Html.ActionLink(item.Name, "EditCustomer", new { item.CustomerId })</td>
                    <td class="text-right">@item.Name</td>
                    <td class="text-right">@item.Email</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteCustomer", "Admin"))
                        {
                            @Html.Hidden("CustomerId", item.CustomerId)
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить" />

                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить покупателя", "CreateCustomer", null, new { @class = "btn btn-default" })
    </div>
</div>

