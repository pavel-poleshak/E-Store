@model E_Store.WebUI.Models.CartIndexViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "E-Store: ваша корзина";
}

<div>
    <h2>Ваша корзина</h2>
</div>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Количество товара</th>
                    <th>Наименование</th>
                    <th>Цена</th>
                    <th>Стоимость</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart.Items)
                {
                    <tr>
                        <td>@item.Quantity</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("# BYN")</td>
                        <td>@((item.Product.Price * item.Quantity).ToString("# BYN"))</td>
                        <td>
                            @using (Html.BeginForm("RemoveFromCart", "Cart"))
                            {
                                @Html.Hidden("productId", item.Product.ProductId)
                                @Html.HiddenFor(m=>m.ReturnUrl)
                                <input class="btn btn-sm btn-danger" type="submit" value="Удалить" />
                            }
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3">Итого</td>
                    <td>@Model.Cart.CalculateTotalPrice().ToString("# BYN")</td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="text-center">
        <a class="btn btn-primary btn-lg" href="@Model.ReturnUrl">Продолжить покупки</a>
    </div>
